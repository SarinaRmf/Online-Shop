@page
@model HW22.Presentation.RazorPages.Pages.Account.RegisterModel
@{
}
<link rel="stylesheet" href="~/css/login.css" />

<div class="login-wrapper">
    <div class="login-box">
        <h2>Welcome Back</h2>
        <p class="subtitle">Login to continue shopping</p>

        <form method="post" asp-page-handler="Register">
            <div class="input-group">
                <label asp-for="registerUserDto.Username">Username</label>
                <input type="text" asp-for="registerUserDto.Username" required>
            </div>

            <div class="input-group">
                <label asp-for="registerUserDto.FirstName">Firstname</label>
                <input type="text" asp-for="registerUserDto.FirstName" required>
            </div>

            <div class="input-group">
                <label asp-for="registerUserDto.Username">Lastname</label>
                <input type="text" asp-for="registerUserDto.LastName" required>
            </div>

            <div class="input-group">
                <label asp-for="registerUserDto.Username">Phone</label>
                <input type="text" asp-for="registerUserDto.Phone" required>
            </div>

            <div class="input-group">
                <label asp-for="registerUserDto.Address">Address</label>
                <input type="text" asp-for="registerUserDto.Address" required>
            </div>

            <div class="input-group">
                <label asp-for="registerUserDto.Password">Password</label>
                <input type="password" asp-for="registerUserDto.Password" required>
            </div>

            <button type="submit" class="login-btn">Register</button>

            <div class="bottom-links">
                <a href="#">Already have an account ?</a>
                <a asp-page="/Register">Login</a>
            </div>

        </form>
        <div class="message-box">
            <p>
                @Model.Message
            </p>
        </div>
    </div>
</div>
